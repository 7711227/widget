{
  "name": "@lifi/wallet-management",
  "version": "3.0.0-alpha.1",
  "description": "LI.FI Wallet Management solution.",
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "watch": "tsc -w -p ./tsconfig.json",
    "build": "yarn clean && yarn build:esm && yarn build:format-package-json && yarn build:clean",
    "build:esm": "tsc --project ./tsconfig.json --module es2020",
    "build:format-package-json": "node ../../scripts/format-package-json.js && cpy 'src/**/*' dist/src",
    "build:clean": "rm -rf tsconfig.tsbuildinfo src/tsconfig.tsbuildinfo dist/src/tsconfig.tsbuildinfo",
    "clean": "yarn build:clean && rm -rf dist",
    "check:types": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "lint": "eslint --ext .tsx --ext .ts ./src",
    "lint:fix": "eslint --ext .tsx --ext .ts ./src --fix",
    "prettier:fix": "prettier --write ./src/."
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn run lint:fix",
      "yarn run prettier:fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Adrian Weniger <adrian@li.finance>",
  "homepage": "https://github.com/lifinance/wallet-management",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lifinance/wallet-management.git"
  },
  "bugs": {
    "url": "https://github.com/lifinance/wallet-management/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "wallet",
    "wallet-management",
    "metamask",
    "wallet-connect",
    "coinbase",
    "eip1193",
    "ethereum",
    "ENS",
    "web3",
    "blockchain",
    "lifi"
  ],
  "dependencies": {
    "@lifi/sdk": "^3.0.0-alpha.36",
    "react": "^18.2.0",
    "wagmi": "^2.0.0-beta.5"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "extends": "../../.eslintrc"
  }
}
