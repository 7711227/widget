{
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/*.md"
  ],
  "command": {
    "version": {
      "ignoreChanges": [
        "**/*.md"
      ]
    },
    "publish": {
      "directory": "{workspaceRoot}/{projectRoot}/dist",
      "assets": [
        {
          "from": "{workspaceRoot}/*.md",
          "to": "./"
        }
      ]
    }
  },
  "changelogPreset": "conventionalcommits",
  "version": "independent",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
